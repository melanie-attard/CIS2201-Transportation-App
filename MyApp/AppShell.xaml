<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyApp">

    <FlyoutItem Title="Home" Icon="bus.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="User" Icon="user.png">
        <ShellContent ContentTemplate="{DataTemplate local:UserPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="User Manager" Icon="user_manager.png">
        <ShellContent ContentTemplate="{DataTemplate local:UserManagerPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Driver" Icon="steering_wheel.png">
        <ShellContent ContentTemplate="{DataTemplate local:DriverPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Driver Manager" Icon="driver_manager.png">
        <ShellContent ContentTemplate="{DataTemplate local:DriverManagerPage}" />
    </FlyoutItem>
</Shell>
